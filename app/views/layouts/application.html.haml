<!DOCTYPE html>
%html{'lang' => 'fr'}
  %head
    %title= @title.join ' -> '
    = stylesheet_link_tag 'style', 'markitup'
    <meta name="description" content="L'actualité de Linux et du Logiciel Libre" />
    == <meta name="keywords" content="#{@keywords.join ', '}" />
    <link rel="icon" type="image/x-icon" href="/favicon.png" />
    - @feeds.each do |link,title|
      = auto_discovery_link_tag :atom, link, { :title => title }

  %body{body_attr}
    = check_js
    %nav
      %ul
        %li= link_to "Accueil", '/'
        %li= link_to "Dépêches", news_index_path
        %li= link_to "Entretiens", interviews_path
        %li= link_to "Journaux", diaries_path
        %li= link_to "Forums", forums_path
        %li= link_to "Sondages", polls_path
        %li= link_to "Wiki", wiki_pages_path
        %li= link_to "Suivi", trackers_path
        %li= link_to "Plan", static_path(:action => 'plan')
      - form_tag search_path, :html => { :method => :get } do
        = text_field_tag :query
        = submit_tag "Rechercher"

    %aside
      %h1= link_to "LinuxFr.org", '/'
      %article.login
        - if current_user
          %p= current_user.name
          %p= link_to "Proposer un contenu", '/proposer_un_contenu'
          %p= link_to "Mon tableau de bord", dashboard_path
          %p= link_to "Modifier mes préférences", edit_account_path
          %p= link_to "Se déconnecter", logout_path
        - else
          = render '/account_sessions/new'
          %p= link_to "Proposer un contenu", '/proposer_un_contenu_quand_on_est_anonyme'
      - admin_only do
        %p= link_to "Admin", '/admin'
      - amr_only do
        = render '/moderation/box'
      = yield :column
      %article.friends
        %h2 Sites amis
        %ul
          %li= link_to "April", 'http://www.april.org'
          %li= link_to "Agenda du libre", 'http://www.agendadulibre.org'
          %li= link_to "Framasoft", 'http://www.framasoft.net'
          %li= link_to "Léa-Linux", 'http://lea-linux.org'
          %li= link_to "Lolix", 'http://fr.lolix.org'

    %section
      - [:error, :success, :notice].each do |type|
        - if flash[type]
          %div{:class => type}= flash[type]
      = yield :layout

    %footer
      %p Cette page a été générée en <a href="http://rubyonrails.org">Ruby on Rails</a>.
      %ul
        %li= link_to "Team LinuxFr.org", '/team'
        %li= link_to "Informations sur le site", '/informations'
        %li= link_to "Contact", '/contact'
        %li= link_to "Plan", '/plan'

    = javascript_include_tag 'jquery-1.3.2', 'jquery.markitup', 'markitup-wiki', 'application'
