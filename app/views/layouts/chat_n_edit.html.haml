<!DOCTYPE html>
%html(lang="fr")
  %head
    %title= @title.join ' -> '
    - if current_account_session && current_account_session.stylesheet
      = stylesheet_link_tag current_account_session.stylesheet, :media => "screen, projection"
    - else
      = stylesheet_link_tag 'application', :media => "screen, projection"
    = stylesheet_link_tag 'print', :media => "print"
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.png" />

  %body{body_attr}
    #top
      = check_js

    %nav#site
      %ul
        %li= link_to "Accueil", '/'
        %li= link_to "Dépêches", news_index_path
        %li= link_to "Journaux", diaries_path
        %li= link_to "Forums", forums_path
        %li= link_to "Sondages", polls_path
        %li= link_to "Wiki", wiki_pages_path
        %li= link_to "Suivi", trackers_path
        %li= link_to "Plan", static_path(:id => 'plan')
      - form_tag search_path, :method => :get do
        <input id="query" name="q" type="search" placeholder="Entrer un mot-clé" />
        = submit_tag "Rechercher", :name => nil

    %section#redaction
      %section#edition
        = yield :layout
      %section#chat
        = yield :chat

    = javascript_include_tag 'http://code.jquery.com/jquery-1.4.2.min.js'
    = javascript_include_tag 'jquery.nano', 'jquery.autocomplete', 'jquery.markitup.pack', 'jquery.hotkeys', 'jquery.notice', 'jquery.chat', 'jquery.toolbar', 'jquery.nested_fields', 'markitup-markdown', 'rails', 'application'
    = javascript_include_tag 'jquery.edition_in_place', 'redaction'
