%aside#sidebar
  %header#branding
    = logo

  .login.box
    - if request.ssl?
      = image_tag 'icones/lock-secure.png', :alt => "Accès sécurisé (https)", :class => "access"
    - else
      = image_tag 'icones/lock-insecure.png', :alt => "Accès en clair (http)", :class => "access"
    - if account_signed_in?
      %h1= current_user.name
      %p Il vous reste #{current_user.account.nb_votes} avis
      %p= link_to "Proposer un contenu", '/proposer-un-contenu'
      %p= link_to "Mon tableau de bord", '/tableau-de-bord'
      %p= link_to "Modifier mes préférences", '/compte/modifier'
      %p= link_to "Changer de CSS", '/stylesheet/modifier'
      %p= link_to "Se déconnecter", '/compte/deconnexion'
    - else
      %h1 Se connecter
      = render "sessions/new"
      %p= link_to "Pas de compte ? S'inscrire !", '/compte/inscription'
      %p= link_to "Proposer un contenu", '/proposer-un-contenu'
  - if current_user && current_user.admin?
    = render 'admin/box'
  - if current_user && current_user.amr?
    = render 'moderation/box'
  - if current_user && (current_user.writer? || current_user.amr?)
    = render 'redaction/box'
  = yield :column
