= form.error_messages

%p
  = form.label :title, "Titre"
  = form.text_field :title, :autocomplete => 'off', :required => 'required', :spellcheck => 'true'
%p
  = form.label :wiki_body, "Contenu"
  = form.text_area :wiki_body, :required => 'required', :spellcheck => 'true', :class => 'markItUp'
%p
  = form.label :message, "Log des modifications"
  = form.text_field :message, :autocomplete => 'off', :spellcheck => 'true'
%p
  = form.submit "Prévisualiser"
  = form.submit "Créer" if @preview_mode
