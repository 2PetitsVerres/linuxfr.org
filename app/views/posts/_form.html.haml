= messages_on_error @post

%p
  = form.label :forum_id, "Forum"
  = form.select :forum_id, Forum.all.map { |f| [f.title, f.id] }
%p
  = form.label :title, "Sujet du message"
  = form.text_field :title, :autocomplete => 'off', :required => 'required', :spellcheck => 'true'
%p
  = form.label :wiki_body, "Message complet"
  = form.text_area :wiki_body, :required => 'required', :spellcheck => 'true', :class => 'markItUp'
%p
  = form.submit "Pr√©visualiser"
  = form.submit "Poster le message" if @preview_mode
