#contents
  =h1 "Éditer un message"

  = render "preview", :preview => @post if @preview_mode

  %h2 Édition
  = form_for [@forum, @post] do |form|
    = render form

  - if current_account && current_account.can_destroy?(@post)
    = button_to "Supprimer", [@post.forum, @post], :method => :delete, :confirm => "Êtes-vous sûr de vouloir supprimer ce post ?"

  = render 'shared/wiki_help'
