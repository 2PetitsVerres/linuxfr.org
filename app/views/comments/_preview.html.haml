%ul
  %li.comment(id="comment-new")
    %h3
      = "Commentaire : #{h preview.title}"
    %p
      = posted_by(preview)
      Évalué à
    %span.score= preview.score
    %figure.image
      = image_tag current_user.avatar.url(:thumbnail), :class => 'avatar', :alt => "Avatar de #{current_user.name}"
    .content
      = sanitize(spellify preview.body)
    %footer
      &nbsp;
