<%= form_for :account, @account, :url => session_path(:account) do |f| %>
  <p><%= f.label :email %></p>
  <p><%= f.text_field :email %></p>

  <p><%= f.label :password %></p>
  <p><%= f.password_field :password %></p>

  <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <p><%= f.submit "Se connecter" %></p>
<% end %>
