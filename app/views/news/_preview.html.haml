- article_for preview do
  %header
    %h2
      #{link_to preview.section.title, preview.section} : #{h preview.title}
    %p.meta
      = news_posted_by(preview)
  .content
    = link_to image_tag(preview.section.image.url, :alt => preview.section.title), preview.section
    = sanitize(spellify preview.wikified_body)
    - preview.links.each do |link|
      %p
        = link_to h(link.title), link.url
    = sanitize(spellify preview.wikified_second_part)
  %footer
    %p
      = read_it(preview)
