- article_for preview do
  %h3
    = link_to preview.section.title, preview.section
    \:
    = preview.title
  %p
    = posted_by(preview)
  .content
    = preview.wikified_body
    - preview.links.each do |link|
      %p
        = link_to link.title, link.url
    = preview.wikified_second_part
  %p
    = read_it(preview)
