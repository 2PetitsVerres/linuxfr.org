= article_for preview do |c|
  - c.title = "#{link_to preview.section.title, preview.section} : #{h preview.title}".html_safe!
  - c.meta  = news_posted_by(preview)
  - c.image = link_to(image_tag(preview.section.image.url, :alt => preview.section.title), preview.section)
  - c.body  = capture do
    = sanitize(spellify preview.wikified_body)
    - preview.links.each do |link|
      %p
        = link_to link.title, link.url
    = sanitize(spellify preview.wikified_second_part)
