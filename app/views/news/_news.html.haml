= article_for news do |c|
  - c.title = "#{link_to h(news.section.title), news.section} : #{link_to h(news.title), news}"
  - c.meta  = news_posted_by(news)
  - c.image = link_to(image_tag(news.section.image.url, :alt => news.section.title), news.section)
  - c.body  = capture do
    = sanitize news.wikified_body
    - news.links.each do |link|
      %p
        = link_to h(link.title), link.url, 'data-hit' => link.id, :title => link.url, :lang => link.lang, :class => 'hit-counter'
        (#{pluralize link.nb_clicks, 'clic'})
    = sanitize news.wikified_second_part
