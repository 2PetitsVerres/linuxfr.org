%article
  %h2 Votes
  %p
    %b Pour :
    = voters_for(@news)
  %p
    %b Contre :
    = voters_against(@news)

  - if @news.published?
    %p
      %b Dépêche publiée
    - if @news.on_ppp?
      %b En PPP
    - elsif @news.pppable_by?(current_user)
      - form_tag ppp_moderation_news_path(@news) do
        = submit_tag "Placer en PPP"
  - elsif @news.refused?
    %p
      %b Dépêche refusée
  - else
    - if @news.acceptable_by?(current_user)
      - form_tag accept_moderation_news_path(@news) do
        = submit_tag "Publier"
    - if @news.refusable_by?(current_user)
      - form_tag refuse_moderation_news_path(@news) do
        = submit_tag "Refuser"
