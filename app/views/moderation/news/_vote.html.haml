#news-vote
  %h1 Votes
  %p
    %strong Pour :
    = voters_for(@news)
  %p
    %strong Contre :
    = voters_against(@news)

  - if @news.published?
    %p
      %strong Dépêche publiée
    - if @news.on_ppp?
      %strong En PPP
    - elsif @news.pppable_by?(current_user)
      = button_to "Placer en PPP", ppp_moderation_news_path(@news)
  - elsif @news.refused?
    %p
      %strong Dépêche refusée
  - else
    - if @news.acceptable_by?(current_user)
      = button_to "Publier", accept_moderation_news_path(@news)
    - if @news.refusable_by?(current_user)
      = button_to "Refuser", refuse_moderation_news_path(@news)
