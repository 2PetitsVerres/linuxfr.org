= article_for news do |c|
  - c.title = "#{link_to news.section.title, news.section} : #{link_to news.title, [:moderation, news]}".html_safe!
  - c.meta  = news_posted_by(news)
  - c.image = link_to(image_tag(news.section.image.url, :alt => news.section.title), news.section)
  - c.body  = capture do
    = sanitize(spellify news.wikified_body)
    - news.links.each do |link|
      %p
        = link_to(link.title, link.url, 'data-hit' => link.id, :title => link.url, :lang => link.lang, :class => 'hit-counter')
        (#{pluralize link.nb_clicks, 'clic'})
    = sanitize(spellify news.wikified_second_part)
