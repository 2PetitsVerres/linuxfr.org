= render @news

%p
  = link_to "&Eacute;diter", edit_moderation_news_url(@news)

%p
  Liste des dernières modifications :
%ul
  - @news.versions.each do |v|
    %li
      = v.committer.name
      \:
      = v.message

%p
  %b Pour :
  = voters_for(@news)
%p
  %b Contre :
  = voters_against(@news)

- if @news.published?
  %b Dépêche publiée
- elsif @news.refused?
  %b Dépêche refusée
- else
  - if @news.acceptable_by?(current_user)
    - form_tag accept_moderation_news_url(@news) do
      = submit_tag "Publier"
  - if @news.refusable_by?(current_user)
    - form_tag refuse_moderation_news_url(@news) do
      = submit_tag "Refuser"

= render @news.node
